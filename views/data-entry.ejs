<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800"><%= i18n.t('data-entry.title') %></h1>

    <!-- Form Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary"><%= i18n.t('data-entry.form_title') %></h6>
        </div>
        <div class="card-body">
            <form id="uploadForm" action="/upload" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="fileInput"><%= i18n.t('data-entry.select_files') %></label>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="fileInput" name="files" multiple>
                        <label class="custom-file-label" for="fileInput"><%= i18n.t('data-entry.choose_files') %></label>
                    </div>
                    <div id="fileList" class="mt-3"></div>
                </div>
                
                <div class="form-group">
                    <label for="description"><%= i18n.t('data-entry.description') %></label>
                    <textarea class="form-control" id="description" name="description" rows="3"></textarea>
                </div>

                <button type="button" class="btn btn-primary" id="uploadButton" disabled>
                    <i class="fas fa-upload fa-sm text-white-50 mr-2"></i>
                    <%= i18n.t('data-entry.upload') %>
                </button>
            </form>

            <!-- Área para mostrar el resultado JSON -->
            <div class="form-group mt-4">
                <label for="jsonResult"><%= i18n.t('data-entry.result') %></label>
                <textarea class="form-control" id="jsonResult" rows="10" disabled 
                    style="font-family: monospace; white-space: pre;"></textarea>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->

<!-- Page level custom scripts -->
<script src="/js/data-entry/data-entry.js"></script>